<div id="gift-detail">
    <div class="image">
        {{!-- <img src="{{gift.image}}" alt="Ảnh quà tặng"> --}}
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img class="d-block w-100" src="{{image}}" alt="First slide">
                </div>
                {{#if image1}}
                <div class="carousel-item">
                <img class="d-block w-100" src="{{image1}}" alt="Second slide">
                </div>
                {{/if}}
                {{#if image2}}
                <div class="carousel-item">
                <img class="d-block w-100" src="{{image2}}" alt="Third slide">
                </div>
                {{/if}}
                {{#if imageBase640}}
                <div class="carousel-item">
                <img class="d-block w-100" src='data:{{contentType0}};base64,{{imageBase640}}' alt="Third slide">
                </div>
                {{/if}}
                {{#if imageBase641}}
                <div class="carousel-item">
                <img class="d-block w-100" src='data:{{contentType1}};base64,{{imageBase641}}' alt="Third slide">
                </div>
                {{/if}}
                {{#if imageBase642}}
                <div class="carousel-item">
                <img class="d-block w-100" src='data:{{contentType2}};base64,{{imageBase642}}' alt="Third slide">
                </div>
                {{/if}}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="info">
        <p class="detail-name" style="font-family:'Segoe UI'" >Tên quà tặng:<span> {{ gift.name }} </span></p>
        <p class="detail-des" style="font-family:'Segoe UI'" >Mô tả:  <span>{{gift.description}}</span></p>
        <p style="font-family:'Segoe UI'">Người tặng: <span>{{gift.author}} </span> </p>
        <button data-id="{{gift.idAuthor}}" id="btn-contact" style="font-family:'Segoe UI'"> Liên hệ </button>
    </div>
</div>
<form name="delete-user-form" method="GET"></form>

<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script>

    $(document).ready(function(){
        var userId = document.getElementById('btn-contact').getAttribute('data-id');
        var deleteForm = document.forms['delete-user-form'];
        $('#btn-contact').click(function () {
            deleteForm.action = '/conversations/' + userId + '?_method=GET';
            deleteForm.submit();
        });
    })

</script>